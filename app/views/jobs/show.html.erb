<div class="container card-large new-job p-0">

  <div class="job-banner-show" style="background-size: cover; background-image: url('<%= @job.banner_photo.attached? ? cl_image_path(@job.banner_photo.key) : 'https://source.unsplash.com/random' %>');">
    <div class="job-banner-content-show">
       <h2><%= @job.title %></h2>
    </div>
  </div>

  <div class="container card-large-body d-flex">
    <div class="row m-3">
      <div class="col-7">
        <p class="about-title"><strong>About the job:</strong></p>
        <div class="description">
          <p><%= @job.description %></p>
        </div>
      </div>

      <div class="card-info col-2">
        <p><strong>Pay:</strong></p>
        <p><strong>Start Date:</strong></p>
        <p><strong>Deadline:</strong></p>
      </div>

      <div class="card-input col-2">
        <p><%= @job.pay %></p>
        <p><%= @job.start_date.strftime('%b %d') %></p>
        <p><%= @job.deadline.strftime('%b %d') %></p>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="button-apply">
      <%= link_to "Apply  ðŸš€", new_job_application_path(@job), class: "button-apply-text" %>
    </div>
    <div>
      <%= link_to "", jobs_path, class: "button-back-show fas fa-times"%>
    </div>
  </div>
</div>
