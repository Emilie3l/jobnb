<div class="container card-large new-job p-0">
  <div class="job-banner-show" style="background-size: cover; background-image: url('<%= @job.banner_photo.attached? ? cl_image_path(@job.banner_photo.key) : 'https://source.unsplash.com/random' %>');">
    <div class="job-banner-content-show">
       <h2><%= @job.title %></h2>
    </div>
  </div>

  <div class="container">
    <div class="row justify-content-between m-3">
      <div class="col-7">
        <p class="about-title"><strong>About the job:</strong></p>
        <div class="description"><p><%= @job.description %></p></div>
      </div>
      <div class="col-3 card-info pl-0">
        <p><strong>🤑 Pay:</strong></p>
        <p><strong>🚀 Start Date:</strong></p>
        <p><strong>⏰ Deadline:</strong></p>
  </div>

  <div class="container">
    <% if policy(JobApplication.new(job: @job)).create? && !@job.applicants.include?(current_user) %>
      <div class="button-apply">
        <%= link_to "Apply  🚀", new_job_job_application_path(@job), class: "button-apply-text" %>
      </div>
    <% end %>
  </div>

  <div class="update-buttons">
    <div class="row">
      <% if policy(@job).update? %>
        <div class="col-7 button-edit">
          <%= link_to "Edit", edit_job_path, class: "button-edit-text" %>
        </div>
        <div class="col-5 button-delete">
          <%= link_to "", job_path,
                method: :delete,
                data: { confirm: "Are you sure?" }, class: "button-delete fas fa-trash-alt" %>
        </div>
      <% end %>
    </div>
    </div>
    <div class="back-button">
      <%= link_to "", jobs_path, class: "button-back-show fas fa-times"%>
    </div>
  </div>
</div>
