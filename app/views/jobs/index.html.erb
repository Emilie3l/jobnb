<div class="banner" style="background: linear-gradient(90deg, rgba(155,246,255,1) 0%, rgba(189,178,255,1) 100%);">
  <div class="banner-content">
  </div>
</div>
<div class="container">
  <div class="row">
    <% @jobs.each do |job| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card" style="background: white;">
          <div class="card-description">
            <div class="title-description">
            <h2 class="title"><%= job.title %></h2>
            <p class="description"><%= job.description %></p>
            </div>
            <p class="pay">Salary: <%= job.pay %></p>
            <p class="start">Begins: <%= job.start_date %></p>
            <p class="deadline">Deadline: <%= job.deadline %></p>
          </div>
          <%= link_to "", job_path(job), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
